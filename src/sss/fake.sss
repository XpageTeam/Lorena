.fake-design__line
    position: absolute 0 0 *
    height: 120vh
    background: #16447B
    z-index: 5
    transform: translateY(-100%) skewY(4deg)
    will-change: transform


    
    &.js__animating
        animation: skewBlock 2s ease forwards


@keyframes skewBlock
    0%
        transform: translateY(-110%) skewY(4deg)

    // 45%
    //     transform: translateY(0%) skewY(4deg)

    55%
        transform: translateY(0%) skewY(4deg)

    100%
        transform: translateY(100%) skewY(4deg)

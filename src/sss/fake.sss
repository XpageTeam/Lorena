jdiv
    display: none !important

.fake-design__accepted
    background-color: #1D4E89
    transition: background-color .3s ease

    path, rect
        transition: fill .3s ease, stroke .3s ease

    *
        transition: background .3s ease, border .3s ease

    .head .js__fake-color, .head.js__fake-color, .main-slider .js__fake-color,
    #content > *:not(:first-child), .footer, .to-top-btn.js__fake-color
    .side-menu, .angry-ivlev
        --main-color: #FF6F61
        --second-color: #1D4E89
        --thrid-color: #16447B

        .active-circle

            path
                fill: var(--main-color)

        .scene-dot, .waves

            > path
                stroke: var(--main-color)

        .logo

            rect
                fill: var(--main-color)

        .arrow-btn
            border: 1px solid var(--main-color)

            &:hover
                background-color: #16447B

        &.main-choose__cont:not(.main-choose__cont--no-bg)
            background-image: url("../img/lorena-bg-fake.svg")   


        .dev

            rect
                fill: var(--thrid-color)
        
        .orange-arrow__arrow:before, .highlight div:before
            background: url("../img/btn-highlight-fake.png") center no-repeat


    


.fake-preview__hidden

    .fake-design
        opacity: 0
        pointer-events: none









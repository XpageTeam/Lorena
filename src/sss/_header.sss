@media (width <= 1500px)

	.head
		padding: 17px 30px


		&__logo
			max-width: 185px


@media (max-width: 1400px)
	.h-menu

		&__link
			font-size: 15px

	.h-phone
		font-size: 15px

	.constructor-link

		&__text
			font-size: 15px

	.h-submenu
		padding: 35px 0 0

		&:before
			bottom: -30px

	.head

		&__logo
			max-width: 130px

@media (max-width: 1300px)
	.head

		&__logo
			max-width: 120px

	.h-menu

		&__link
			font-size: rem(14)

			&:before
				right: -10px !important

		&__item:not(:last-child)
			margin-right: 35px

@media (max-width: 1280px)

	.head__stay-home
		.btn
			padding: 13px 15px 11px
			
@media (max-width: 1200px)
	.head
		padding: 10px 20px

		&__logo
			margin-right: 20px

		&__menu
			display: none

		&__phone
			margin: 0 auto 0 20px

		&__constructor
			margin: 0 20px 0 0

		&__burger
			margin-left: 30px

			&.js__active

				.burger

					&:before, &:after
						opacity: 0

					span

						&:before, &:after
							opacity: 1

	.burger
		display: flex
		flex-direction: column
		justify-content: flex-end
		align-items: flex-end
		size: 37px 10px
		cursor: pointer
		user-select: none
		position: relative

		&:after, &:before
			content: ""
			height: 2px
			background: var(--main-color)
			display: inline-block

		&:after
			margin: 6px 0 0
			width: 100%

		&:before
			width: calc(100% - 13px)

		span
			size: 18px 14px
			display: flex
			flex-direction: column
			justify-content: space-between
			position: absolute calc(50% - 7px) * * calc(50% - 9px)

			&:before, &:after
				content: ""
				size: 100% 2px
				background: #fff
				transition: opacity .3s ease
				opacity: 0

			&:before
				transform: translate3d(2px,6px,0) rotate(45deg)

			&:after
				transform: translate3d(2px,-6px,0) rotate(-45deg)

@media (max-width: 1000px)
	body
		overflow-x: visible
	.head
		background: var(--main-color) !important
		position: sticky 0 * * !important
		padding: 10px 20px 10px 0

		&__burger
			padding: 18px 0

	.h-menu__item:not(:last-child)
		margin-right: 0

	.constructor-link

		&__icon
			fill: #fff

		&__text
			display: none

	.h-favorites, .h-lc

		.ico
			fill: #fff

	.h-city__icon

		path
			fill: #fff

@media (max-width: 660px)

	.head__stay-home
		display: none

	.head

		&__logo
			flex: none
			margin-right: 0
			max-width: 100px
			
		&__links
			margin-right: auto

			&-lc, &-fav

				&:not(:last-child)
					margin-right: 10px

		&__constructor
			margin-right: 10px

		&__phone, &__burger
			margin-left: 0

		&__phone
			margin-right: auto

		&__city
			position: static

			.h-city
				display: none

			&-popup
				top: 100%
				left: 0
				right: 0
				width: auto

	.city-popup
		width: auto

		&:before
			display: none

	

	.h-phone
		font-size: 12px

	.constructor-link__icon
		margin-right: 0

	.logo

		img
			transform: translate(-2px, 0)

@media (max-width: 360px)
	.head

		&__logo
			max-width: 80px
@media (min-width: 1201px)
	.head__burger
		display: none

.head__stay-home
	margin: 0 10px

.main, .tovar, .constructor

	.head
		position: fixed 0 * * 0
		width: 100%
		transition: background-color .3s ease

		&.js__scrolled
			background: var(--thrid-color)

		&__menu

			&:hover, &:focus

				.h-menu:before
					opacity: 1

.inner

	&:not(.tovar):not(.constructor)

		.head
			position: sticky 0 * * *
			// background: var(--second-color)
			background: var(--thrid-color)

			.h-submenu:before
				background: var(--thrid-color)

@media (min-width: 1000px)
	body

		&[class*="career"], &[class*="dealers"], &[class*="about "]

			.head
				background: var(--second-color) !important
				border-bottom: 1px solid var(--thrid-color)

.head
	z-index: 3
	color: #fff
	text-transform: uppercase
	padding: 27px 40px 20px

	&__wrap
		display: flex
		justify-content: space-between
		align-items: center
		max-width: 1920px
		margin: 0 auto

	&__city

		&-popup
			position: absolute calc(100% + 20px) * * calc(50% - 92px)

	&__menu
		margin: 0 1.15vw 0 auto

	&__links
		display: flex

		&-lc, &-fav

			&:not(:last-child)
				margin-right: 30px

	&__constructor, &__links, &__phone, &__logo,
	&__city
		position: relative
		z-index: 2

	&__logo, &__phone
		margin-right: 30px

	a
		color: inherit

.logo

	svg
		height: auto

.h-favorites

	&[data-count]
		position: relative

		&:after
			content: attr(data-count)
			color: #fff
			position: absolute * * 100% calc(100% + 8px)
			font-weight: 500
			font-size: 10px

.h-city
	display: flex
	align-items: center
	user-select: none
	cursor: pointer

	&__icon
		margin-right: 17px

	&__name
		font-size: 13px
		font-weight: 500
		display: flex
		align-items: center

		&:after
			content: ""
			margin-left: 13px
			border-right: 1px solid #fff
			border-bottom: 1px solid #fff
			size: 4px
			transform: rotateZ(45deg)

.city-popup
	width: 184px
	text-align: center
	background: var(--second-color)
	padding: 15px
	position: relative

	&:before
		content: ""
		position: absolute * * 100% calc(50% - 5px)
		size: 0
		border-style: solid
		border-width: 0 4px 5px 4px
		border-color: transparent transparent var(--second-color) transparent

	&__title
		text-transform: none
		font-weight: 500
		font-size: 14px
		margin: 0 0 15px

	&__btns

		&-btn

			&.gray-btn
				border-color: var(--main-color) !important

			a
				display: block

			&:not(:first-child)
				margin-left: 12px

.h-phone
	font-weight: 400

.h

	&-lc, &-favorites
		display: block

	&-lc

		.ico
			size: 17px 20px
			fill: var(--main-color)

	&-favorites

		.ico
			size: 19px 18px
			fill: var(--main-color)

.constructor-link
	display: flex
	align-items: center
	font-size: 13px

	&__icon
		size: 18px
		margin-right: 17px
		fill: var(--main-color)




@media (min-width: 1200px)
	.h-menu
		display: flex

		&:before
			content: ""
			position: absolute 0
			background: var(--second-color)
			opacity: 0
			pointer-events: none
			transition: opacity .3s ease

		&__item

			&:not(:last-child)
				margin-right: vw(60)

			&--have-sub
				position: relative

				&:hover

					.h-submenu
						opacity: 1
						pointer-events: all

						li
							opacity: 1

				.h-menu__link
					position: relative

					&:before
						content: ""
						position: absolute calc(50% - 5px) -20px * *
						border-right: 1px solid #737373
						border-bottom: 1px solid #737373
						size: 5px
						transform: rotateZ(45deg)

		&__link
			position: relative
			z-index: 2
			font-weight: 500
			font-size: 13px

			&:after
				content: ""
				pointer-events: none
				position: absolute calc(100% + 12px) 6px *
				height: 2px
				background: var(--main-color)
				transition: transform .3s ease
				transform: scaleX(0)

			&:matches(:hover, :focus, .active)

				&:after
					transform: scaleX(1)

	.h-submenu
		position: absolute 100% * * 0
		padding: 60px 0 0
		pointer-events: none
		opacity: 0

		&:before
			content: ""
			background: var(--second-color)
			position: absolute * * -60px 50%
			transform: translateX(-50%)
			size: 300vw 100vh

		&__link
			text-transform: none
			font-size: 14px
			transition: color .3s ease
			white-space: nowrap

			&:not(:hover, :focus, .active)
				color: rgba(255,255,255, .3) !important

			&:matches(:hover, :focus, .active)
				color: var(--main-color)

		li
			position: relative
			z-index: 2
			transition: opacity .3s ease
			opacity: 0

			&:not(:first-child)
				margin: 11px 0 0



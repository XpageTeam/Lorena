html(lang="ru")
	head
		meta(charset="utf-8")
		title Адреса
		include inc/head.pug
		include inc/css.pug
	body.inner.loading
		include inc/header.pug
		main#content
			.inner-content
				.inner-content__title
					.wrapper
						.title-block
							.title-block__title
								h1 Адреса
							nav.title-block__menu
								ul.title-menu
									each item in ["новые открытия"]
										li
											a.title-menu__link.gray-btn(href="#")=item
				.inner-content__content
					.wrapper
						.addresses
							.addresses__list
								.address-list
									each address, j in ["Актау", "Альметьевск", "Астана", "Барнаул", "Белгород", "Березники", ]
										.address-list__item
											.address
												header.address__top
													.address__top-title(data-count="1")=address
													address.address__top-address ул. пушкина, 64
													.address__top-btn
														.gray-arrow-btn Подробнее о салоне
												main.address__content
													.address-desc
														.address-desc__contacts
															.address-contacts
																.address-contacts__item.address-contacts__item--full
																	.address-contacts__title Контакты
																	address
																		a(href="tel: 8 (8553) 32-05-11") 8 (8553) 32-05-11
																	address
																		a(href="mailto: almetyevsk1@lorena-kuhni.ru") almetyevsk1@lorena-kuhni.ru
																.address-contacts__item
																	.address-contacts__title График работы
																	time пн-пт: 10.00–19.00
																	time сб: 10.00–19.00
																	time вс: 10.00–17.00
																.address-contacts__item
																	.address-contacts__title Руководитель салона
																	p Юдина Марина
															.address-btns
																a.arrow-btn(href="#") Закажи бессплатный замер
																a.gray-arrow-btn(href="#") Посмотреть на крате
														.address-desc__slider
															.address-slider
																.swiper-wrapper
																	- for (let i = 0; i < 4; i++)
																		.swiper-slide
																			a.address-slider__slide(href="img/photos/addres-img.jpg" data-fancybox="address-gallery-"+j)
																				img.swiper-lazy(data-src="img/photos/addres-img.jpg")
																			.swiper-lazy-preloader
																.address-slider__arrows
																	.swiper-button-prev
																	.swiper-button-next
			.main-choose__cont.main-choose__cont--no-bg
				.wrapper
					.main-choose
						.main-choose__form
							.main-choose__text-title Заполни заявку
							.main-choose__text-subtitle на бесплатный дизайн-проект своей кухни
								br
								| и получи рецепт в подарок!
							.choose-form 
								form(action="#")
									.choose-form__inputs
										.default-input
											input.default-input__input(type="text" placeholder="Иван" required)
											label.default-input__label Ваше имя
											.forms__error-message
										.default-input.default-input--select
											select.default-input__input.default-input__input--select(type="text" data-placeholder="Выберите город" required)
												option(value="Выберите город" disabled="")
												option(value="1" selected="") Челябинск
												option(value="2") Челябинск
												option(value="3") Челябинск
												option(value="4") Челябинск
												option(value="5") Челябинск
											label.default-input__label Город
											.forms__error-message
										.default-input
											input.default-input__input(type="tel" placeholder="+7 (351) 000 00 00" inputmode="tel" data-mask="phone" size="25" pattern='\\+7\\s\\([0-9]{3}\\)\\s[0-9]{3}-[0-9]{2}-[0-9]{2}' required)
											label.default-input__label Телефон
											.forms__error-message
										.default-input
											input.default-input__input(type="email" placeholder="Ivan@mail.ru" required  pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{1,63}$" inputmode="email")
											label.default-input__label E-mail
											.forms__error-message
										.choose-form__bot
											.choose-form__bot-submit
												input.arrow-btn.choose-form__submit(type="submit" value="Отправить")
						figure.main-choose__img
							img(src="img/photos/another-ivlev.png")
		div(style="display: none")
			include symbol/sprite.svg
		include inc/footer.pug
		include inc/scripts.pug
